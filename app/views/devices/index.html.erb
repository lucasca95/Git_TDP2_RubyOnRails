<p id="notice"><%= notice %></p>

<h1>Devices</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Target</th>
      <th>Esp</th>
      <th>Program</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @devices.each do |device| %>
      <tr>
        <td><%= device.name %></td>
        <td><%= device.latitude %></td>
        <td><%= device.longitude %></td>
        <td><%= device.target %></td>
        <td><%= device.esp %></td>
        <td><%= device.program %></td>
        <td><%= link_to 'Show', device , class: "btn btn-primary"%></td>
        <td><%= link_to 'Edit', edit_device_path(device), class: "btn btn-warning" %></td>
        <td><%= link_to 'Destroy', device, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Device', new_device_path, class: "btn btn-success" %>

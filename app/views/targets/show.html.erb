<div class="panel panel-primary">
    <div class="panel-heading">Program Infomation</div>
    <div class="panel-body">
      <div class="row">
        <div class="col-sm-3">
          <p>
            <strong>Name:</strong>
            <%= @target.name %>
          </p>
        </div>
      </div>
      <div class="row">
          <table class="table">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Description</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
            
              <tbody>
                <% @target.programs.each do |program| %>
                  <tr>
                    <td><%= program.name %></td>
                    <td><%= program.description %></td>
                    <td><%= link_to 'Show', program, class:"btn btn-primary" %></td>
                    <td><%= link_to 'Edit', edit_program_path(program), class:"btn btn-warning" %></td>
                    <td><%= link_to 'Destroy', program, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
  
      </div>
      <%= link_to 'Edit', edit_target_path(@target), class:"btn btn-warning" %> |
      <%= link_to 'Back', targets_path , class:"btn btn-success" %> 
    </div>    
  </div>





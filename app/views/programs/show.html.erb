


<div class="panel panel-primary">
  <div class="panel-heading">Program Infomation</div>
  <div class="panel-body">
    <div class="row">
      <div class="col-sm-3">
        <p>
          <strong>Name:</strong>
          <%= @program.name %>
        </p>
      </div>
      <div class="col-sm-6">
        <p>
          <strong>Description:</strong>
          <%= @program.description %>
        </p>
      </div>      
    </div>
    <div class="row">
      <div class="col-sm-12">
        <p>
          <strong>Compatible Targets:</strong>
          <% @program.targets.map{|t| "#{t.name}, "}.each do |target| %>
          <%= target %>
          <% end %>
        </p>
      </div>
    </div>
    <div class="row">
      <table class="table">
          <thead>
              <tr>
                <th>Name</th>
                <th>Latitude</th>
                <th>Longitude</th>
                <th>Target</th>
                <th>Esp</th>
                <th>Program</th>
                <th colspan="3"></th>
              </tr>
            </thead>
          
            <tbody>
              <% @program.devices.each do |device| %>
                <tr>
                  <td><%= device.name %></td>
                  <td><%= device.latitude %></td>
                  <td><%= device.longitude %></td>
                  <td><%= device.target %></td>
                  <td><%= device.esp %></td>
                  <td><%= device.program %></td>
                  <td><%= link_to 'Show', device , class: "btn btn-primary"%></td>
                  <td><%= link_to 'Edit', edit_device_path(device), class: "btn btn-warning" %></td>
                  <td><%= link_to 'Destroy', device, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
                </tr>
              <% end %>
            </tbody>
      </table>

    </div>
    <%= link_to 'Edit', edit_program_path(@program), class:"btn btn-warning" %> |
    <%= link_to 'Back', programs_path, class:"btn btn-success" %>
  </div>    
</div>
